@model IEnumerable<DevCom.Models.Notepad>

@{
    ViewBag.Title = "Index";
}

<div class="tab-pane fade show active h-100 text-dark" id="notepad" role="tabpanel" aria-labelledby="notepad-tab">
    <div class="row h-100">
        <div class="col-md-3">
            <button type="button" class="btn btn-primary w-100 mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                + Create
            </button>

            <div class="modal fade" id="exampleModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Enter Note Title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="recipient-name">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="list-group">

                <a href="#note" class="list-group-item list-group-item-action">
                    first
                </a>
            </div>
        </div>
        <div class="col h-100">
            <div id="note">

            </div>
        </div>
    </div>
</div>



